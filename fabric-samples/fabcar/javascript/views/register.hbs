<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="css\bootstrap.min.css">
        <link rel="stylesheet" href="css/animate.css">
        
        <link rel="stylesheet" href="css\style.css">
        <title>Register for COVID-19 Vaccine Supply Chain</title>

    </head>
    <body>
       <div class="wow slideInLeft">
      <h2 class="pt-5 text-white text-center">Welcome To Vaccine Supply Chain</h2>
      </div>
        <div class="logform">
        <div class="form-box ">
            <div class="button-box text-center">
                <div id="btn1"></div>
        <button  class="reglogin btn text-center" type="button" onclick="login()">Login</button>
        <button  class="reglogin btn text-center text-white" type="button" >Register</button>
        
        </div>
        <form id="register" action="/register" method="POST">
            
               {{#if errors}}
           <section class="errors">
             <ul>
               {{#each errors}}
               <li style="list-style:none"><div class="alert alert-danger alert-dismissible">
               {{this.msg}}
             </div></li>
               {{/each}}
             </ul>
             </section>
              {{/if}}
              
       
            <div class="form-group">
                <input type="name" class="form-control form-1" id="exampleInputName" name="name" aria-describedby="nameHelp" placeholder="Enter your organization name" required>
                </div>
            <div class="form-group form-1">
              <input type="text" name="email" class="form-control form-1" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" required>
              </div>
              <div class="form-group">
                  <label class="mx-2 font-weight-bold" for="role">Your role:</label>
                  
                <div class="form-check form-check-inline role">
                    <input class="form-check-input" type="radio" name="role" id="inlineRadio1" value="Producer" checked>
                    <label class="form-check-label" for="inlineRadio1">Producer</label>
                  </div>
                  <div class="form-check form-check-inline role">
                    <input class="form-check-input role" type="radio" name="role" id="inlineRadio2" value="Distributor">
                    <label class="form-check-label" for="inlineRadio2">Distributor</label>
                  </div>
                  <div class="form-check form-check-inline role">
                    <input class="form-check-input role" type="radio" name="role" id="inlineRadio3" value="Customer" >
                    <label class="form-check-label" for="inlineRadio3">Customer</label>
                  </div>
                
                  
            </div>
              
            <div class="form-group form-1">
              <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password" required>
            </div>
            <div class="form-group form-1">
                <input type="password" name="c_password" class="form-control" id="exampleInputPassword1" placeholder="Confirm Password" required>
              </div>
            
            <div class="form-group text-center">
            <button type="submit" class="btn btn-primary submit">Register</button>
            </div>
          </form>

          
    </div>
    </div>
    
        <script src="js\bootstrap.min.js" ></script>
         <script src="js/wow.min.js"></script>
              <script>
              new WOW().init();
              </script>
        <script>
            x=document.getElementById("register");
            y=document.getElementById("login")
            z=document.getElementById("btn1")
            function login(){
                 
                 z.style.left="0%";
                 window.location.href="/"

            }
            
        </script>
    </body>
</html>